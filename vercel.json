{
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/liff",
      "destination": "/public/liff/index.html"
    },
    {
      "source": "/liff/:path*",
      "destination": "/public/liff/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/morning-reminder",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/evening-reminder",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/check-anomalies",
      "schedule": "0 */2 * * *"
    }
  ]
}
