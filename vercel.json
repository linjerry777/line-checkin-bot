{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook"
    },
    {
      "src": "/liff/(.*)",
      "dest": "/public/liff/$1"
    },
    {
      "src": "/liff",
      "dest": "/public/liff/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/morning-reminder",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/evening-reminder",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/check-anomalies",
      "schedule": "0 */2 * * *"
    }
  ]
}
